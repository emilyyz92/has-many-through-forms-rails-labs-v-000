<h3><%=@post.title%></h3>
<p><%=@post.content%></p>
<label>Comments: </label>
<ul>
<% @post.comments.each do |comment| %>
<li><%= comment.content %></li>
<% end %>
</ul>
<label>Users: </label>
<ul>
  <% @post.uniq_users.each do |user| %>
  <li><%= user.username %></li>
  <% end %>
</ul>
<%= form_for @comment do |f| %>
<%= f.label :content %>
<%= f.text_field :content %><br>
Select user:
<%= f.collection_check_boxes :user_id, User.all, :id, :username, {:include_blank => true} %>
<br>
<%= f.submit %>
<% end %>
