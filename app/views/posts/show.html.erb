<h3><%=@post.title%></h3>
<p><%=@post.content%></p>
<label>Comments: </label>
<% if @post.comments != [] %>
  <ul>
    <% @post.comments.each do |comment| %>
    <li><%=comment.user.username %> says: <%= comment.content %></li>
    <% end %>
  </ul>
<% end %>
<label>Users: </label>
<ul>
  <% @post.uniq_users.each do |user| %>
  <li><%= user.username %></li>
  <% end %>
</ul>
<label> Leave a comment: </label> <br>
<%= form_for @post.comments.build do |f| %>
<%= f.label :content %>
<%= f.text_field :content %><br>
<%= f.hidden_field :post_id %>
Select user:
<%= collection_select(:comment, :user_id, User.all, :id, :username, {:include_blank => ""}) %>
<br>
Or create a new one:
<%= fields_for :user do |user_field| %>
<%= user_field.text_field :username, id: "comment_user_attributes_username" %>
<% end %>
<%= f.submit %>
<% end %>
