<h3><%=@post.title%></h3>
<p><%=@post.content%></p>
<label>Comments: </label>
<ul>
<% @post.comments.each do |comment| %>
<li><%= comment.content %></li>
<% end %>
</ul>
<label>Users: </label>
<ul>
  <% @post.uniq_users.each do |user| %>
  <li><%= user.username %></li>
  <% end %>
</ul>
<label> Leave a comment: </label> <br>
<%= form_for @comment do |f| %>
<%= f.label :content %>
<%= f.text_field :content %><br>
Select user:
<%= collection_select(:user, :user_id, User.all, :id, :username, {:include_blank => ""}) %>
<br>
Or create a new one:
<%= fields_for :user, @comment.user do |user_field| %>
<%= user_field.text_field :username %>
<% end %>
<%= f.submit %>
<% end %>
